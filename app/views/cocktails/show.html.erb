<h1><%= @cocktail.name  %></h1>

<div class="container">
  <h2>Ingredients</h2>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn" %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> : <%= dose.description %> - <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
</div>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<br>

<%= link_to "Back to list", cocktails_path, class: "btn btn-default" %>
