<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path('banner.jpg') %>');">
  <div class="container">
    <h1>My INCREDIBLE Cocktails</h1>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
      <% end %>
    </div>
  </div>
</div>



<%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-default" %>

